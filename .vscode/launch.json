{
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}",
      "module": "uvicorn",
      "justMyCode": false,
      "args": [
          "server.main:app",
          "--host",
          "0.0.0.0",
          "--port",
          "8000",
          "--reload"
      ]
    },
    {
      "name": "Python: File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "justMyCode": true
    }
  ]
}